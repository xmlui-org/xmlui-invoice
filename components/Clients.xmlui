<Component name="Clients">
    <DataSource id="clients" url="/query" body='{ window.clients() }'
                method="POST" />

    <H1>Clients</H1>

    <Table data="{clients}">
        <Column canSort="true" bindTo="Name" />
        <Column bindTo="Email" />
        <Column bindTo="Phone" />
        <Column canSort="true" bindTo="Outstanding">
            <Text>{formatAsCurrency($item.Outstanding)}</Text>
         </Column>

    </Table>

</Component>