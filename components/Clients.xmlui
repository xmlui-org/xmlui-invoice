<Component name="Clients">

  <DataSource
    id="clients"
    url="/api/clients"
    method="GET"
  />
  <H1>Clients</H1>

  <Table data="{clients}">
    <Column canSort="true" bindTo="Name" />
    <Column bindTo="Email" />
    <Column bindTo="Phone" />
    <Column canSort="true" bindTo="Outstanding">
      <Text>{formatAsCurrency($item.Outstanding)}</Text>
    </Column>

  </Table>

</Component>