<Component name="Chart" xmlns:XMLUIExtensions="component-ns">

    <DataSource
        id="revenue"
        url="/query"
        body="{ window.monthlyRevenue() }"
        method="POST" />

    <H1>{$props.title}</H1>

    <Card height="400px">
        <XMLUIExtensions:BarChart
          layout="horizontal"
          data="{ revenue }"
          dataKeys="{['total']}" nameKey="month"
        />
    </Card>

</Component>