<Component name="MonthlyRevenue" xmlns:XMLUIExtensions="component-ns">

    <DataSource
        id="revenue"
        url="/api/dashboard/revenue"
        method="GET" />

    <H1>{$props.title}</H1>

    <Card height="400px">
        <XMLUIExtensions:BarChart
          layout="horizontal"
          data="{ revenue }"
          dataKeys="{['total']}" nameKey="month"
        />
    </Card>

</Component>