<Component name="CreateClient">
  <H1>
    Add New Client
  </H1>
  <!-- TODO!!!!     inProgressNotificationMessage="Creating client..."
                    completedNotificationMessage="Client created successfully"
                     onSuccess="Actions.navigate('/clients')"
                    -->
  <Form
    id="newClientForm"
    submitUrl="/api/clients"
    submitMethod="POST"
    onCancel="Actions.navigate('/clients')">
    <Card>
      <FormItem
        bindTo="name"
        label="Name"
        placeholder="Enter client name"
        required="true" />
      <FormItem
        pattern="email"
      bindTo="email"
        label="Email"
        placeholder="example@email.com"
        required="true" />
      <FormItem
        bindTo="phone"
        label="Phone"
        placeholder="123 456 7890"
        regex="{window.phoneRegex}"
        required="true" />
      <FormItem
        type="textarea"
        bindTo="address"
        label="Address"
        placeholder="Enter client address" />
    </Card>
  </Form>
</Component>