<Component
    name="StatusBadge"
    var.statusColors="{{
        draft: { background: '#f59e0b', label: 'white' },
        sent: { background: '#3b82f6', label: 'white' },
        paid: { background: '#10b981', label: 'white' }
    }}">
    <Badge
        value="{$props.status}"
        colorMap="{statusColors}"
        variant="pill" />
</Component>